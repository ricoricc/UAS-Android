<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterScreenAct">

    <Button
        android:id="@+id/btnBackF"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDateF"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="--/--/----"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnDateF"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:text="edit tanggal"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDateF"
        app:layout_constraintStart_toStartOf="@+id/tvDateF"
        app:layout_constraintTop_toBottomOf="@+id/tvDateF" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:text="Apply Changes"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btnDateF"
        app:layout_constraintStart_toStartOf="@+id/btnDateF"
        app:layout_constraintTop_toBottomOf="@+id/btnDateF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="Masukan tanggal data transaksi yang ingin di tampilkan disini"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>